{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["functions/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
